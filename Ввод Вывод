#include <iostream>
#include <cmath>
using namespace std;
int main() {
    int a, b;
    
    // Вводим значения катетов
    cout << "Введите значение первого катета (a): ";
    cin >> a;
    
    cout << "Введите значение второго катета (b): ";
    cin >> b;
    
    // Вычисляем гипотенузу по теореме Пифагора
    double c = sqrt(a*a + b*b);
    
    // Выводим результат
    cout << "Гипотенуза треугольника с катетами " << a << " и " << b << " равна " << c << endl;
    
    return 0;
}
